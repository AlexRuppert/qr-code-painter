primaryColor = #d73200
hoverColor = lighten(primaryColor, 10%)
activeColor = lighten(primaryColor, 20%)

*, *::before, *::after
  box-sizing border-box

body
  display flex
  flex-direction column
  align-items center
  min-height 400px

html, body
  height 100%

html
  font-size 1px /* for using REM units */

body, textarea
  margin 0
  padding 0
  color #222
  font-size 16rem
  font-family 'Tahoma', 'Helvetica Neue', sans-serif
  line-height 1.3em

.hidden
  display none

.displaced
  position absolute
  top -200px

.top
  position relative
  padding 50px
  width 100vw

.mini
  max-width 400px

#controls
  position relative
  display flex
  width 100%

#templates
  margin-left -30px

#menu-button
  position fixed
  top 0
  left 0
  z-index 99
  padding 10px
  width 40px
  height 40px

  span, span::before, span::after
    position absolute
    display block
    width 22px
    height 2px
    background primaryColor
    transition all 0.2s

  span::before
    top -8px
    content ''

  span::after
    top 8px
    content ''

  &.open
    span
      transform rotate(45deg)

    span::before
      top 0
      transform rotate(0deg)

    span::after
      top 0
      transform rotate(90deg)

#menu-container
  position fixed
  top 0
  bottom 0
  left 0
  z-index 2
  overflow-y auto
  margin-left -100%
  padding-top 40px
  max-width 100%
  width 400px
  background-color rgba(255, 246, 241, 0.9)
  box-shadow 0 0 5px rgba(100, 0, 0, 0.1)
  font-size 1.2em
  transition all 0.2s
  user-select none
  backdrop-filter blur(6px)

  &.open
    margin-left 0

  ul
    margin 0
    padding 0

    li
      min-height 3em
      color primaryColor
      list-style-type none
      font-variant all-small-caps
      line-height 3em
      cursor pointer

      a, span
        display block
        margin 0
        padding 0 3em
        width 100%
        height 100%

      a:hover, span:hover, button:hover
        background rgba(100, 0, 0, 0.1)

  ul ul
    margin-left 30px

  #favorites
    li
      display flex

      a
        padding 0 10px
        width 50px
        text-align center

.icon
  position absolute
  z-index 1
  font-size 1.3em

#clear
  right 55px

#favorite
  left 15px

textarea, button
  align-self center
  padding 8px
  min-width 1.5em
  outline none
  border none
  border-radius 0
  background none

textarea
  min-height 2em
  width 100%
  border-bottom 1px solid primaryColor

  &:hover
    border-color hoverColor

button, a
  color primaryColor
  text-decoration none
  font-variant all-small-caps
  cursor pointer

  &:hover
    color hoverColor

  &:active
    color activeColor

svg
  max-width 97vw
  max-height calc(100vh - 10em)
  width 100%
  cursor pointer
  transition all 0.2s

  &:after
    display block
    padding-bottom 100%
    content ''

path
  pointer-events none
