@import './reset'
@import './typography'

primaryColor = #d73200
hoverColor = lighten(primaryColor, 10%)
activeColor = lighten(primaryColor, 20%)

remove-background()
  outline none
  border none
  border-radius 0
  background none

.hidden
  display none

.displaced
  position absolute
  top -200px

.top-row
  padding 30px
  width 100vw

.bottom-row
  position absolute
  bottom 1em
  display flex
  flex-wrap wrap
  justify-content space-between

#input
  position relative
  width 100%

  #clear
    position absolute
    top -0.2em
    right 0
    z-index 9
    font-weight 400
    font-size 1.2em

  #select
    position absolute
    top 0.3em
    left -30px
    padding 0 5px
    text-decoration none
    font-size 1.5em

textarea
  padding 0.5em
  width 100%
  remove-background()
  min-height 2em
  border-bottom 1px solid primaryColor
  font-size 1em
  line-height 1em

  &:hover
    border-color hoverColor

  &:active
    border-color activeColor

button
  align-self center
  padding 0.5em
  color primaryColor
  remove-background()
  text-transform uppercase
  font-weight 600
  cursor pointer

  &:hover
    color hoverColor

  &:active
    color activeColor

svg
  max-width 100vw
  max-height calc(100vh - 10em)
  width 100%
  background #fff
  cursor pointer
  transition all 0.2s

  &:after
    display block
    padding-bottom 100%
    content ''

a
  margin 2px 6px
  color primaryColor
  text-decoration none
  font-variant all-small-caps
  font-size smaller

body
  position relative
  display flex
  flex-direction column
  align-items center
  min-height 400px

html, body
  height 100%

.modal
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 999
  display none
  justify-content center
  align-content center
  background-color rgba(0, 0, 0, 0.6)
  backdrop-filter blur(3px)

  &:target
    display flex
    pointer-events all

  &>div
    position relative
    overflow auto
    padding 2em
    min-height 400px
    width 640px
    background #fff

  h1
    margin 0 0 15px

  ul
    list-style none

    li:before
      color #0a0
      content 'âœ“ '
      font-weight 800

.modal-close
  position absolute
  top 15px
  right 25px
  text-align center
  text-decoration none

  &:hover
    color black

#template-container
  position absolute
  top 2em
  left 0
  visibility hidden
  padding 1em
  background #fff
  box-shadow 2px 2px 5px #aaa
  opacity 0

  &:target
    visibility visible
    opacity 1

  a
    min-height 3em
    line-height 3em
