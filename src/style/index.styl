@import './reset'
@import './typography'

primaryColor = #d73200
hoverColor = lighten(primaryColor, 10%)
activeColor = lighten(primaryColor, 20%)

remove-background()
  outline none
  border none
  border-radius 0
  background none

.hidden
  display none

.displaced
  position absolute
  top -200px

.horizontal
  display flex
  flex-wrap wrap
  align-items center
  margin 1.5em
  padding 0.5em 2em
  width 100vw

.space-around
  justify-content space-around

.pinned-bottom
  position absolute
  bottom 5px

#input
  margin 0 1em
  width calc(100% - 220px)

textarea
  padding 0.5em
  min-width 200px
  remove-background()
  min-height 2em
  border-bottom 1px solid primaryColor
  font-size 1.2em
  line-height 1em

  &:hover
    border-color hoverColor

  &:active
    border-color activeColor

@media (max-width 600px)
  #input
    margin 0
    width 100%

button
  align-self center
  padding 0.5em
  color primaryColor
  remove-background()
  text-transform uppercase
  font-weight 600
  cursor pointer

  &:hover
    color hoverColor

  &:active
    color activeColor

svg
  padding 5em
  max-width 100vw
  max-height calc(100vh - 10em)
  width 100%
  background #fff
  cursor pointer
  transition all 0.2s

  &:after
    display block
    padding-bottom 100%
    content ''

a
  margin 2px 5px
  color primaryColor
  font-variant all-small-caps

body
  display flex
  flex-direction column
  align-items center
  margin 0
  height 100vh

.modal
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 999
  display flex
  visibility hidden
  justify-content center
  align-content center
  background-color rgba(0, 0, 0, 0.6)
  opacity 0
  backdrop-filter blur(10px)

  &:target
    visibility visible
    opacity 1
    pointer-events auto

  &>div
    position relative
    margin-top 30vh
    padding 2em
    min-height 400px
    width 640px
    height 40vh
    background #fff

  h1
    margin 0 0 15px

  ul
    list-style none

    li:before
      color #0a0
      content 'âœ“ '
      font-weight 800

.modal-close
  position absolute
  top 15px
  right 25px
  text-align center
  text-decoration none

  &:hover
    color black

#template-container
  position absolute
  top 3em
  left 0
  display grid
  visibility hidden
  padding 1em
  background #fff
  box-shadow 2px 2px 5px #aaa
  opacity 0

  &:target
    visibility visible
    opacity 1

a.select
  padding 0 5px
  text-decoration none
  font-size 2em

@media (max-width 600px)
  a.select
    position absolute
    top -10px
    left 0
