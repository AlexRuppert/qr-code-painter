    link(rel='mask-icon' href='assets/safari-pinned-tab.svg' color='#555')

    title QR Code Painter
    link(rel='stylesheet' href='style/index.styl')
  body
    .top-row
      label.displaced(for='textarea') Input
      #input
        button#templates +
        ul#template-container.hidden
          li(
            data-template='MATMSG:TO: <email-address> ;SUB: <Subject> ;BODY: <Text>;;'
          ) Email
          li(data-template='tel:') Phone
          li(data-template='geo:<lat>,<long>,<alt>') Geolocation
          li(data-template='WIFI:T:WPA;S: <ssid> ;P: <password> ;;') WiFi
          li Cancel
        textarea#textarea(
          type='text'
          rows='1'
          placeholder='Enter text here...'
          spellcheck='false'
        )
        button#clear Ã—

    svg(xmlns='http://www.w3.org/2000/svg' stroke='#000' stroke-width='1.05')
    .bottom-row
      a#download(href='javascript:void(0)') Download QR
      a(
        href='javascript:(function()%7Bwindow.open(\'https%3A%2F%2Falexruppert.github.io%2Fqr-code-painter%2F%3Fq%3D\'%2BencodeURIComponent(window.location.href)%2C\'_blank\')%7D)()'
      ) Bookmarklet
      a(href='https://github.com/AlexRuppert/qr-code-painter') GitHub &amp; REadme
    a#downloader.hidden(href='#') 
